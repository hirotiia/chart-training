{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "plugins": ["check-file"],
  "rules": {
    "check-file/filename-naming-convention": [
      "error",
      {
        "**/*.{ts,tsx}": "KEBAB_CASE"
      },
      {
        "ignoreMiddleExtensions": true
      }
    ],
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "./src/features/auth",
            "from": "./src/features",
            "except": ["./auth"]
          },
          {
            "target": "./src/features/users",
            "from": "./src/features",
            "except": ["./users"]
          }
        ]
      }
    ]
  }
}
